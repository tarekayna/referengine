@{
    ViewBag.Title = "About";
    ViewBag.HideHeader = true;
    ViewBag.HideFooter = true;
}

@section scripts
{
    <script src="~/js/facebook.js"></script>
}


<div id="fb-root"></div>

<hr/>

<div class="container">
    <div class="row">
        <div class="span12">
            <div class="fb-login-button" data-show-faces="true" data-width="400" data-max-rows="1"></div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="span12">
            <input id="get-devices" type="button" value="Get Friends Devices" class="btn btn-primary"/>            
        </div>
    </div>
    <div class="row" id="result">
        <hr/>
        <div class="span4">
            <strong>iPhone</strong><br/>
            <div id="iPhoneNames"></div>
        </div>
        <div class="span4">
            <strong>iPad</strong><br/>
            <div id="iPadNames"></div>
        </div>
        <div class="span4">
            <strong>Android</strong><br/>
            <div id="AndroidNames"></div>
        </div>
    </div>
</div>

<hr/>