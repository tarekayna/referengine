@using (Html.BeginForm(new { ViewProperties.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="span12">
                    
                    @Html.Partial("_Messaging")

                    <div class="modal modal-flat">
                        <div class="modal-header">
                            <h3>Change Your Password
                            </h3>
                        </div>
                        <div class="modal-body">
                            <fieldset>
                                <div class="control-group">
                                    <div class="controls">
                                        @Html.LabelFor(m => m.OldPassword)
                                        <div class="input-prepend">
                                            <span class="add-on"><i class="icon-lock"></i></span>
                                            @*@Html.TextBoxFor(m => m.Email, new { @class = "span3", @placeholder = "username@email.com", @name = "Email" })*@
                                            @Html.PasswordFor(m => m.OldPassword)
                                        </div>
                                    </div>
                                    <div class="controls">
                                        @Html.LabelFor(m => m.NewPassword)
                                        <div class="input-prepend">
                                            <span class="add-on"><i class="icon-lock"></i></span>
                                            @*@Html.PasswordFor(m => m.Password, new { @class="span3", @name="password", @placeholder="password"})*@                            
                                            @Html.PasswordFor(m => m.NewPassword)
                                        </div>
                                    </div>
                                    <div class="controls">
                                        @Html.LabelFor(m => m.ConfirmPassword)
                                        <div class="input-prepend">
                                            <span class="add-on"><i class="icon-lock"></i></span>
                                            @*@Html.PasswordFor(m => m.Password, new { @class="span3", @name="password", @placeholder="password"})*@                            
                                            @Html.PasswordFor(m => m.ConfirmPassword)
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-primary" value="Change password" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
