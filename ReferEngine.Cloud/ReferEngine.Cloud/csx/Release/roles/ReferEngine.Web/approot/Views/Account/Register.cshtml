@model ReferEngine.Web.Models.Account.RegisterModel

<div id="content">
    <div class="container">
        <div class="row">
            <div class="span12">
                
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <div class="modal modal-flat">
                        <div class="modal-header">
                            <h3>Register a New Account</h3>
                        </div>
                        <div class="modal-body">
                            <p class="text-info center-content">Start using Refer Engine for free. No credit card required.</p>	
                            <fieldset>
                                <div class="control-group">
                                    <div class="controls">
                                        <label for="FirstName">First Name</label>
                                        <input data-val="true" data-val-required="The First Name field is required." id="FirstName" name="FirstName" type="text" value="" placeholder="John"/>
                                    </div>
                                    <div class="controls">
                                        <label for="LastName">Last Name</label>
                                        <input data-val="true" data-val-required="The Last Name field is required." id="LastName" name="LastName" type="text" value=""  placeholder="Smith"/>
                                    </div>
                                    <div class="controls">
                                        <label for="Email">Email</label>
                                        <input data-val="true" data-val-required="The Email field is required." id="Email" name="Email" type="text" value=""  placeholder="username@mail.com"/>
                                    </div>
                                    <div class="controls">
                                        <label for="Password">Password</label>
                                        <input data-val="true" data-val-length="The Password must be at least 6 characters long." data-val-length-max="100" data-val-length-min="6" data-val-required="The Password field is required." id="Password" name="Password" type="password" placeholder="password" />
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="modal-footer">
                            <a href="~/account/login" class="btn pull-left">Already a Member?</a>
                            <input type="submit" value="Register" class="btn btn-primary" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
