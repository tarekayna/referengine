@using ReferEngine.Common.Utilities
@model ReferEngine.Common.Models.App

@{
    ViewBag.Title = "Refer Engine Intro";
    ViewBag.App = Model;
}

@section scripts
{
    <script type="text/javascript">
        var re = {};
        re.appName = "@Model.Name";
        re.appId = @Model.Id
    </script>

    @Scripts.Render("~/bundles/js/recommend/win8/intro")

    <script type="text/javascript">
        setTimeout(function(){var a=document.createElement("script");
            var b=document.getElementsByTagName("script")[0];
            a.src=document.location.protocol+"//dnn506yrbagrg.cloudfront.net/pages/scripts/0013/9490.js?"+Math.floor(new Date().getTime()/3600000);
            a.async=true;a.type="text/javascript";b.parentNode.insertBefore(a,b)}, 1);
    </script>
}

@section styles
{
    @Styles.Render("~/bundles/less/recommend/win8/intro")
}

<div class="center-content">
    <div class="banner">
        Earn rewards by recommending @Model.Name to your friends! 
    </div>

    @Html.Image(Server.MapPath("~/img/intro-steps.png"), "Recommend Your Friends", "intro-steps")
    
    <div class="steps title">
        <div class="rcmnd">Recommend</div>
        <div class="earn">Win</div>
    </div>
    <div class="steps text">
        <div class="rcmnd">
            <span>share with your friends on facebook.</span>
        </div>
        <div class="earn">
            <span>win $2 cash for every 3 friends who buy the app within two weeks<sup>*</sup>.</span>
        </div>
    </div>
    
    <div class="rules">
        <sup>*</sup>
        @Html.RouteLink("Other rules apply", "Default", new { controller = "About", action = "Rules", Id = 21 },
                new { target = "_blank" })
    </div>
</div>

@section footer
{
    <div>
        <div class="chkCtnr">
            <input type="checkbox" id="dontAsk" />
            <label for="dontAsk">Don't ask me again</label>
        </div>
        <a class="m-btn no" id="re-cancel">Cancel</a>
        <a class="m-btn go" id="re-login">Log In to Facebook</a>
    </div>
}
