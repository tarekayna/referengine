        <div class="row">
            <div class="span12">
                @if (!string.IsNullOrEmpty(Model.App.LogoLinkHighQuality))
                {
                    <img src="@ImageData.GetLink(Model.App.LogoLinkHighQuality, "w_50")" alt="@Model.App.Name Logo" class="app-logo" />
                }
                else
                {
                    <img src="@Model.App.LogoLink50" alt="@Model.App.Name Logo" class="app-logo" />
                }

                @if (string.IsNullOrEmpty(Model.App.Headline))
                {
                    <h2>@Model.App.Name for @Model.App.Platform</h2>
                }
                else
                {
                    <h2>@Model.App.Headline</h2>	
                    <h4>@Model.App.Name for @Model.App.Platform</h4>
