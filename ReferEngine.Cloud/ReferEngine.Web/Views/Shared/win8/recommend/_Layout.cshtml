@{
    Verifier.IsNotNullOrEmpty(ViewProperties.CurrentApp, "ViewProperties.CurrentApp");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <script src="//cdn.optimizely.com/js/179184149.js"></script>
    <title>
        @if (ViewProperties.CurrentApp != null) 
        {
            @:@ViewProperties.CurrentApp.Name | Refer Engine
        }
        else 
        {
            @:Refer Engine
        }
    </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Apexa Inc.">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Duru+Sans' rel='stylesheet' type='text/css'>
    @Html.Partial("_FavIcon")
    @Html.Partial("_SetJavaScriptGlobalVariables")
    @RenderSection("styles", required: false)
</head>
    <body>
        <div id="re-ctnr">
            <header>
                @HtmlHelperExtensions.Image(Html, ViewProperties.CurrentApp.LogoLink50, ViewProperties.CurrentApp.Name, "app-logo")
                <div class="app-name">@ViewProperties.CurrentApp.Name</div>
                @Html.Partial("_LogoMark30")
                <h4 class="logo-text">Refer Engine</h4>
            </header>
            <span class="enc">
                &#x1f512; encrypted connection
            </span>
            <div id="re-content">
                @RenderBody()
            </div>
            <footer>
                @RenderSection("footer")
            </footer>
        </div>
        
        @Html.Partial("_MixPanel")

        @Scripts.Render("~/bundles/libs/base")
        
        @*@if (ViewProperties.UseJQueryValidate)
        {
            @Scripts.Render("~/bundles/libs/jquery-validate")
        }
        
        @if (ViewProperties.UseJQueryUi)
        {
            @Scripts.Render("~/bundles/libs/jquery-ui")
        }*@

        @RenderSection("scripts", required: false)
        @Html.Partial("_CrazyEgg")
        @Html.Partial("_LiveChat")
        @StackExchange.Profiling.MiniProfiler.RenderIncludes()
        <script type="text/javascript" src="https://s3.amazonaws.com/appfail-us/appfail.reporting.min.js?slug=Refer-Engine"></script>
    </body>
</html>
