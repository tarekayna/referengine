@using ReferEngine.Common.Data
@{
    ViewProperties viewProperties = ((ViewProperties)ViewData["ViewProperties"]);
    Verifier.IsNotNullOrEmpty(viewProperties, "viewProperties");
}

<!DOCTYPE html>
<html lang="en">
    @RenderSection("CustomHead", false)
    <head>
        @{
            const string baseTitle = "Refer Engine | Facebook Marketing for App Developers";
            string title = baseTitle;
            if (viewProperties != null && !string.IsNullOrEmpty(viewProperties.PageTitle))
            {
                title = title + " | " + viewProperties.PageTitle;
            }
            string desc = "Refer Engine is a Facebook integration service for applications that helps developers in marketing " +
                          "their apps by rewarding their customers for successful recommendations.";
        }
        <title>@title</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="@desc">
        <meta name="author" content="Apexa Inc.">
        <meta property="og:title" content="@title"/> 
        <meta property="og:url" content="@Request.Url"/> 
        <meta property="og:description" content="@desc"/> 
        <meta property="og:image" content="https://www.referengine.com/img/logo-mark-50.png"/> 

        <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    
        @Html.Partial("_FavIcon")
        @Html.Partial("_SetJavaScriptGlobalVariables")

        @Styles.Render("~/bundles/css/bootstrap")
        @Styles.Render("~/bundles/less/web")
        @RenderSection("styles", required: false)
    </head>
    <body>
        <div class='notifications top-right'></div>

        @if (Request.IsAuthenticated && viewProperties != null && viewProperties.CurrentUser != null)
        {
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="btn btn-primary btn-dropnav" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>		

                        <ul class="nav pull-left">
                            @if (viewProperties.CurrentUser.Apps != null && viewProperties.CurrentUser.Apps.Count > 0)
                            {
                                <div class="btn-group">
                                    <button class="btn dropdown-toggle" data-toggle="dropdown">
                                        @if (viewProperties.CurrentApp == null)
                                        {
                                            <span>Your Apps</span>
                                        }
                                        else
                                        {
                                            <span>@viewProperties.CurrentApp.Name</span>
                                        }
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        @for (int i = 0; i < viewProperties.CurrentUser.Apps.Count; i++)
                                        {
                                            <li>
                                                <a tabindex="-1" href="~/app/dashboard/@viewProperties.CurrentUser.Apps[i].Id">@viewProperties.CurrentUser.Apps[i].Name</a>
                                            </li>
                                        }
                                        <li class="divider"></li>
                                        <li><a href="~/app/new"><i class="icon-plus-sign"></i> Add New App</a></li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <a href="~/app/new" class="btn"><i class="icon-plus-sign"></i> Add New App</a>
                            }                           
                        </ul>

                        <div class="nav-collapse collapse">
                            @if (viewProperties.CurrentApp != null)
                            {
                                <ul class="nav pull-left">
                                    <li @if(viewProperties.ActiveMenuItem == "Dashboard"){<text>class="active"</text>}>
                                        <a href="~/app/dashboard/@viewProperties.CurrentApp.Id">Dashboard</a>
                                    </li>
                                    <li @if(viewProperties.ActiveMenuItem == "Settings"){<text>class="active"</text>}>
                                        <a href="~/app/settings/@viewProperties.CurrentApp.Id">Settings</a>
                                    </li>
                                </ul>
                            }
                            <ul class="nav pull-right">
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group">
                                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                                            <span>Admin</span>
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a href="~/admin/errors" target="_blank">Server Errors</a></li>
                                            <li><a href="~/admin/inviterequests">Invite Requests</a></li>
                                            <li><a href="~/admin/admin">Admin Panel</a></li>
                                        </ul>
                                    </div>                                    
                                }
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"}))
                                {
                                    <div class="btn-group">
                                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                                            <span>@viewProperties.CurrentUser.FirstName @viewProperties.CurrentUser.LastName</span>
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a href="~/account/manage"><i class="icon-wrench"></i> Account</a></li>
                                            <li class="divider"></li>
                                            <li>
                                                @Html.AntiForgeryToken()
                                                <a href=" javascript:document.getElementById('logoutForm').submit() "><i class="icon-off"></i> Sign Out</a>
                                            </li>
                                        </ul>
                                    </div>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="btn btn-primary btn-dropnav" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>		
                        <a class="brand" href="~/"><img src="~/img/logo-web-header.png" alt="@baseTitle" /></a>
                        <div class="nav-collapse collapse">
                            <ul class="nav pull-right">
                                @*<li><a href="~/howitworks">How it works</a></li>*@
                                <li><a href="~/pricing">Pricing</a></li>
                                <li><a href="~/contact">Contact</a></li>
                                <li><a>|</a></li>
                                <li>
                                    <div class="btn-group" id="login-group">
                                        <a class="btn" id="log-in-hdr" href="~/account/login">Log In</a>
                                        <a class="btn btn-success" href="#private-beta" role="button" 
                                           data-toggle="modal" id="request-invite-hdr">Request an Invite</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }

        @RenderBody()
    
        <div id="footer">
            <div class="container">
                <div class="row">
                    <div class="span3">
                        <h4>Quick Links</h4>
                        <ul>
                            <li><a href="~/">Home</a></li>
                            @*<li><a href="~/howitworks">How it works</a></li>*@
                            <li><a href="~/pricing">Pricing</a></li>
                            <li><a href="~/contact">Contact</a></li>
                        </ul>			
                    </div>
                    <div class="span3">		
                        <h4>Company</h4>
                        <ul>
                            @*<li><a href="~/about">About Us</a></li>*@
                            <li><a href="~/about/privacy">Privacy Policy</a></li>
                            <li><a href="~/about/terms">Terms of Use</a></li>
                            <li><a href="~/about/use">Acceptable Use Policy</a></li>
                            <li><a href="~/about/copyright">Copyright</a></li>
                        </ul>	
                    </div>  
                </div>	  
            </div>	  
        </div>
        
        <div id="copywrite">
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <p>&copy; @DateTime.Now.Year <img src="~/img/logo-mark-white-25.png" /> ReferEngine.com <span id="totop" class="pull-right">Back to Top <i class="icon-arrow-up"></i></span></p>
                    </div>		  
                </div>
            </div>	  
        </div>
    

        @Scripts.Render("~/bundles/libs/base")
        @Scripts.Render("~/bundles/libs/jquery-validate")
        @Html.Partial("_MixPanel")

        @if (viewProperties != null && viewProperties.UseJQueryUi)
        {
            @Scripts.Render("~/bundles/libs/jquery-ui")
        }

        @RenderSection("scripts", required: false)
        
        @{
            if (viewProperties != null)
            {
                viewProperties.UseJQueryValidate = true;
            }
        }
        @Html.Partial("_PrivateBeta")
        
        
        @if (Request.IsAuthenticated && viewProperties != null && viewProperties.CurrentUser != null)
        {
            //@Scripts.Render("~/js/shared/layout-auth")
        }
        else
        {
            @Scripts.Render("~/js/shared/layout-not-auth")
        }
        
        @StackExchange.Profiling.MiniProfiler.RenderIncludes()
        
        @Html.Partial("_GoogleAnalytics")
    </body>

</html>
