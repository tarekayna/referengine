@using ReferEngine.Common.Utilities
@model ReferEngine.Common.Models.App

@section scripts
{
    <script data-main="/typescript/recommend/windows/server/intro.js" type="text/javascript" src="~/typescript/lib/require.js"></script> 
}

@section styles
{
    @Styles.Render("~/bundles/less/recommend/win8/intro")
}

@Html.Image(Server.MapPath("~/img/recommend/win8/start-arrow.png"), "Start here!", "start-arrow")

<div class="center-content">
    <div class="banner">
        Win cash by recommending @Model.Name to your friends!
    </div>
    
    @Html.Image(Server.MapPath("~/img/recommend/win8/intro-steps.png"), "Recommend Your Friends", "intro-steps")
    
    <div class="steps title">
        <div class="rcmnd">Recommend</div>
        <div class="earn">Win</div>
    </div>
    <div class="steps text">
        <div class="rcmnd">
            <span>share with your friends on facebook.</span>
        </div>
        <div class="earn">
            <span>win <strong>$2 cash for every friend</strong> who buys the app<sup>*</sup></span>
        </div>
    </div>
    
    <div class="rules">
        @Html.RouteLink("* Other rules apply", "Default", new { controller = "About", action = "Rules", Id = 21 },
                new { target = "_blank" })
    </div>
</div>

@section footer
{
    <div>
        <a class="m-btn no" id="re-cancel">Cancel</a>
        <div class="chkCtnr">
            <input type="checkbox" id="dontAsk" />
            <label for="dontAsk">Don't ask me again</label>
        </div>
        <div class="never">We never post to Facebook without your permission.</div>
        <a class="m-btn go login">Log In to Facebook</a>
    </div>
}
