@model ReferLib.App

@{
    ViewBag.Title = "Refer Engine Intro";
}

@section scripts
{
    @Scripts.Render("~/js/refer/win8/intro")
}

@section styles
{
    @Styles.Render("~/css/refer/win8/intro")
}

<div class="container">
    <div class="row">
        <h2 class="span12">
            Spread the word about @Model.Name and earn rewards! 
        </h2>
    </div>
    <div class="row">
        <p class="span12">
            Introducing the @Model.Name referral program!
        </p>
        <p class="span12">
            It is very simple:
        </p>
        <ol>
            <li>Login to Facebook and tell your friends about @Model.Name</li>
            <li>Earn rewards for every friend who buys @Model.Name!</li>
        </ol>
    </div>
    <div class="row" id="start-row">
        <div class="span12 center-content">
            <a class="m-btn green big" id="re-login">Start Now!</a>
        </div>
    </div>
    <div class="row">
        <div class="span12 center-content">
            <a class="m-btn sm" id="re-not-now">Not Now</a>
            <a class="m-btn sm" id="re-dont-ask">Don't ask me again</a>
        </div>
    </div>
</div>
