@model ReferEngine.Models.Refer.Win8.FriendsViewModel

@section scripts
{
    @*@Scripts.Render("~/js/lib/jquery.aceditable")*@
    @Scripts.Render("~/js/refer/win8/friends")
}

@section styles
{
    @*@Styles.Render("~/css/lib/jquery.aceditable")*@
    @Styles.Render("~/css/refer/win8/friends")
}

<input type="hidden" id="appId" value="@Model.App.Id" />
<input type="hidden" id="userAccessToken" value="@Model.UserAccessToken" />

<div class="container">
    <div class="row">
        <h2 class="span12">Welcome, <span>@Model.Me.FirstName</span>!
        </h2>
    </div>
    <form class=".form-horizontal">
        <div class="control-group">
            <label class="control-label">
                Custom message: (use @@ to tag your friends)
            </label>
            <div class="controls">
                <div contenteditable id="message" class="input-medium"></div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <a id="submit-button" class="btn btn-success">Post Recommendation to Facebook</a>
            </div>
        </div>
    </form>
</div>
