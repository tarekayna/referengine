@model ReferLib.App

@{
    ViewBag.Title = "Refer Engine Intro";
}

@section scripts
{
    @Scripts.Render("~/js/refer/win8/intro")
}

@section styles
{
    @Styles.Render("~/css/refer/win8/intro")
}

<div class="container">
    <div class="row">
        <h2 class="span12">
            Recommend @Model.Name to your friends and earn rewards! 
        </h2>
    </div>
    <div class="row">
        <p class="span12">
            Introducing the @Model.Name referral program!
        </p>
        <p class="span12">
            It is very simple:
        </p>
        <ol>
            <li>Login to Facebook and tell your friends about @Model.Name. If you would like to, 
                you can include a custom message in the next step.
            </li>
            <li>Refer Engine will track your recommendation and whether any of your friends
                purchases @Model.Name.
            </li>
            <li>Earn cash back for every three friends who buy @Model.Name!</li>
        </ol>
    </div>
    <div class="row" id="start-row">
        <div class="span12 center-content">
            <a class="m-btn green big" id="re-login">Start Now!</a>
        </div>
    </div>
    <div class="row">
        <div class="span12 center-content">
            <a class="m-btn sm" id="re-not-now">Not Now</a>
            <a class="m-btn sm" id="re-dont-ask">Don't ask me again</a>
        </div>
    </div>
</div>
